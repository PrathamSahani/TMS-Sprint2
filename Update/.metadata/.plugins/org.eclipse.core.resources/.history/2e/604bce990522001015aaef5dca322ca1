    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
    // Initialize jsPDF
    const { jsPDF } = window.jspdf;
    
    // Show ticket and hide modal with animation
    function showTicket() {
        const modal = document.getElementById('paymentModal');
        modal.style.opacity = '0';
        modal.style.transition = 'opacity 0.3s ease';
        
        setTimeout(() => {
            modal.style.display = 'none';
            const ticket = document.getElementById('ticketDisplay');
            ticket.style.display = 'block';
        }, 300);
    }
    
    // Download ticket as PDF
    function downloadPDF() {
        const ticketElement = document.getElementById('ticket-content');
        const downloadBtn = document.querySelector('.btn-download');
        
        // Change button text to show loading state
        const originalText = downloadBtn.innerHTML;
        downloadBtn.innerHTML = '<i class="bi bi-arrow-repeat me-2"></i>Generating PDF...';
        downloadBtn.disabled = true;
        
        // Use html2canvas to capture the ticket
        html2canvas(ticketElement, {
            scale: 2,
            logging: false,
            useCORS: true,
            allowTaint: true,
            backgroundColor: '#fff9e6'
        }).then(canvas => {
            const imgData = canvas.toDataURL('image/png');
            const pdf = new jsPDF('p', 'mm', 'a4');
            const imgWidth = 190;
            const imgHeight = canvas.height * imgWidth / canvas.width;
            
            // Add background color to PDF
            pdf.setFillColor(255, 249, 230);
            pdf.rect(0, 0, 210, 297, 'F');
            
            pdf.addImage(imgData, 'PNG', 10, 10, imgWidth, imgHeight);
            pdf.save(`Railway_Ticket_${'${txn.transId}'}.pdf`);
            
            // Restore button state
            downloadBtn.innerHTML = originalText;
            downloadBtn.disabled = false;
        }).catch(err => {
            console.error('Error generating PDF:', err);
            downloadBtn.innerHTML = originalText;
            downloadBtn.disabled = false;
            alert('Failed to generate PDF. Please try again.');
        });
    }
    
    // Redirect to home page
    function goToHome() {
        window.location.href = 'UserHome.jsp';
    }
    
    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('paymentModal');
        if (event.target === modal) {
            showTicket();
        }
    }
    </script>
