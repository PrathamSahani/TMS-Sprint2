    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
    // Initialize jsPDF
    const { jsPDF } = window.jspdf;
    
    // Show ticket and hide modal with animation
    function showTicket() {
        const modal = document.getElementById('paymentModal');
        modal.style.opacity = '0';
        modal.style.transition = 'opacity 0.3s ease';
        
        setTimeout(() => {
            modal.style.display = 'none';
            const ticket = document.getElementById('ticketDisplay');
            ticket.style.display = 'block';
            ticket.style.animation = 'fadeInScale 0.6s ease-out';
        }, 300);
    }
    
    // Download ticket as PDF
    function downloadPDF() {
        const ticketElement = document.getElementById('ticket-content');
        
        // Use html2canvas to capture the ticket
        html2canvas(ticketElement, {
            scale: 2,
            logging: false,
            useCORS: true,
            allowTaint: true
        }).then(canvas => {
            const imgData = canvas.toDataURL('image/png');
            const pdf = new jsPDF('p', 'mm', 'a4');
            const imgWidth = 190;
            const imgHeight = canvas.height * imgWidth / canvas.width;
            
            pdf.addImage(imgData, 'PNG', 10, 10, imgWidth, imgHeight);
            pdf.save(`ticket_${'${txn.transId}'}.pdf`);
        });
    }
    
    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('paymentModal');
        if (event.target === modal) {
            showTicket();
        }
    }
    </script>
