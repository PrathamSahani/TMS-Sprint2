    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <script>
    // Show ticket and hide modal
    function showTicket() {
        document.getElementById('paymentModal').style.display = 'none';
        document.getElementById('ticketDisplay').style.display = 'block';
    }
    
    // Download ticket function
    function downloadTicket() {
        const ticket = document.getElementById('ticket-content').outerHTML;
        const blob = new Blob([ticket], { type: 'text/html' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'ticket_${txn.transId}.html';
        a.click();
        URL.revokeObjectURL(url);
    }
    
    // Close modal when clicking outside (optional)
    window.onclick = function(event) {
        const modal = document.getElementById('paymentModal');
        if (event.target === modal) {
            showTicket();
        }
    }
    </script>
