<!-- JS Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Simple card type detection
    document.querySelector('[placeholder="1234 5678 9012 3456"]').addEventListener('input', function(e) {
        const cardIcon = document.getElementById('cardTypeIcon');
        const value = e.target.value.replace(/\s/g, '');
        
        if (/^4/.test(value)) {
            cardIcon.src = "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/visa/visa-original.svg";
            cardIcon.style.opacity = "1";
        } else if (/^5[1-5]/.test(value)) {
            cardIcon.src = "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/mastercard/mastercard-original.svg";
            cardIcon.style.opacity = "1";
        } else {
            cardIcon.style.opacity = "0";
        }
        
        // Add spaces after every 4 digits
        if (value.length > 0) {
            e.target.value = value.match(/.{1,4}/g).join(' ');
        }
    });
</script>
