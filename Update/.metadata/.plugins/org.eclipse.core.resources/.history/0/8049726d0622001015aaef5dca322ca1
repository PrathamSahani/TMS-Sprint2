<!-- JS Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Format card number with spaces
    function formatCardNumber(input) {
        // Remove all non-digit characters
        let value = input.value.replace(/\D/g, '');
        
        // Add space after every 4 digits
        value = value.replace(/(\d{4})(?=\d)/g, '$1 ');
        
        // Update the input value
        input.value = value;
        
        // Update the card preview
        const cardNumberDisplay = document.querySelector('.card-number');
        if (value.trim() === '') {
            cardNumberDisplay.textContent = '•••• •••• •••• ••••';
        } else {
            // Show first 4 digits and mask the rest
            const visiblePart = value.substring(0, 4);
            const maskedPart = value.length > 4 ? ' •••• •••• ' + (value.length > 12 ? '••••' : value.substring(12)) : '';
            cardNumberDisplay.textContent = visiblePart + maskedPart;
        }
    }
    
    // Format expiry date with slash
    function formatExpiry(input) {
        let value = input.value.replace(/\D/g, '');
        
        if (value.length > 2) {
            value = value.substring(0, 2) + '/' + value.substring(2, 4);
        }
        
        input.value = value;
        
        // Update card preview
        const expiryDisplay = document.querySelector('.card-expiry');
        if (value.trim() === '') {
            expiryDisplay.textContent = 'MM/YY';
        } else {
            expiryDisplay.textContent = value;
        }
    }
    
    // Update cardholder name in preview
    document.getElementById('cardName').addEventListener('input', function(e) {
        const nameDisplay = document.querySelector('.card-holder');
        if (e.target.value.trim() === '') {
            nameDisplay.textContent = 'CARD HOLDER';
        } else {
            nameDisplay.textContent = e.target.value.toUpperCase();
        }
    });
    
    // Update card logo based on card number
    document.getElementById('cardNumber').addEventListener('input', function(e) {
        const cardLogo = document.querySelector('.card-logo img');
        const firstDigit = e.target.value.charAt(0);
        
        if (firstDigit === '4') {
            cardLogo.src = 'https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/visa.svg';
        } else if (firstDigit === '5') {
            cardLogo.src = 'https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/mastercard.svg';
        } else if (firstDigit === '3') {
            cardLogo.src = 'https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/americanexpress.svg';
        } else {
            cardLogo.src = 'https://cdn.jsdelivr.net/npm/simple-icons@v5/icons/creditcard.svg';
        }
    });
</script>
